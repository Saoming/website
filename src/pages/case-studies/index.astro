---
import Divider from "../../components/Divider.astro";
import SingleCaseStudies from "../../components/SingleCaseStudies.astro";
import { getCollection } from "astro:content";
import BaseCaseStudies from "../../layouts/baseCaseStudies.astro";

const projects = await getCollection("projects");
---

<BaseCaseStudies>
  {
    projects.map(({ data: { id, slug, title, categories } }) => (
      <>
        <SingleCaseStudies
          id={id}
          slug={slug}
          title={title}
          categories={categories}
        />
        <Divider caseStudies={true} />
      </>
    ))
  }
</BaseCaseStudies>
